rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to properties and site config
    match /properties/{propertyId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /properties/{propertyId}/{allDescendants=**} {
       allow read: if true;
       allow write: if request.auth != null;
    }

    match /config/site {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow authenticated users to submit contact forms
    match /contactSubmissions/{submissionId} {
      allow create: if request.auth != null;
      allow read, update, delete: if false; // Protect submitted data
    }
  }
}
